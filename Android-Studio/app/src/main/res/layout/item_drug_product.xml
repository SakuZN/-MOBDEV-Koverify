<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="24dp"
    android:background="@drawable/bordered"
    android:orientation="vertical"
    android:paddingLeft="14dp"
    android:paddingTop="12dp"
    android:paddingRight="14dp"
    android:paddingBottom="14dp">

    <!-- First Row: Brand Name and Generic Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4sp"
            android:fontFamily="@font/inter_bold"
            android:text="Brand Name"
            android:textColor="#1A1a1a"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="- Generic Name"
            android:textColor="#1A1a1a"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- Second Row: Manufacturer and Classification -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Manufacturer Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginRight="3sp"
                    app:srcCompat="@drawable/factory" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfmono_medium"
                    android:letterSpacing="0.25"
                    android:text="MANUFACTURER"
                    android:textColor="#212121"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Manufacturer Name"
                android:textColor="#1a1a1a"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Classification Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginRight="3sp"
                    app:srcCompat="@drawable/frame" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfmono_medium"
                    android:letterSpacing="0.25"
                    android:text="CLASSIFICATION"
                    android:textColor="#212121"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Classification"
                android:textColor="#1a1a1a"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
